{
  "name": "api",
  "version": "1.0.0",
  "engines": {
    "node": ">=6.0.0"
  },
  "description": "The web API for Monad",
  "repository": "https://github.com/dartmouth-cs98/18w-si32",
  "main": "index.js",
  "scripts": {
    "test": "export DB_URI='mongodb://localhost:27017' && export DB_EXTENSION='/si32_test' && mocha --reporter spec --exit",
    "lint": "eslint app/",
    "build": "docker-compose build",
    "up": "docker-compose up",
    "start": "nodemon app/index.js",
    "prepush": "npm run lint",
    "clean": "npm run clean-containers && npm run clean-images",
    "clean-images": "docker rmi $(docker images -a -q)",
    "clean-containers": "docker stop $(docker ps -a -q) && docker rm $(docker ps -a -q)"
  },
  "author": "Monad Team",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^2.2.1",
    "aws-sdk": "^2.192.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^5.0.0",
    "koa": "^2.5.0",
    "koa-body": "^2.5.0",
    "koa-router": "^7.4.0",
    "mongoose": "^5.0.3",
    "msgpack-lite": "^0.1.26",
    "node": "^9.4.0",
    "nodemon": "^1.14.12",
    "redis": "^2.8.0",
    "redis-sessions": "^1.3.0",
    "socket.io": "^2.4.0",
    "trueskill": "0.0.2"
  },
  "devDependencies": {
    "bluebird": "^3.5.1",
    "chai": "^4.1.2",
    "dirty-chai": "^2.0.1",
    "eslint": "^4.17.0",
    "eslint-plugin-node": "^6.0.0",
    "husky": "^0.14.3",
    "mocha": "^5.0.1",
    "rewire": "^3.0.2"
  }
}
